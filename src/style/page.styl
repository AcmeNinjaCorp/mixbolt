body
	background-color: #333
	background-image: url('debut_dark.png')
	color: #ddd
	font-family: Helvetica, Verdana, Arial, sans-serif
	font-size: 14px
	line-height: 1.5em
	padding: 0
	margin: 0
	min-width: 1000px

.clearfix
	clear: both

.content
	width: 640px
	margin: 0 auto

#logo
	display: block

#top-bar
	position: fixed
	top: 0
	width: 100%
	padding: 5px
	z-index: 999

.line
	border-top: 1px dotted #666
	margin-bottom: 20px

a
	color: #0080FF

.button
	display: inline-block
	padding: 5px
	background-color: #ded
	color: #000
	text-decoration: none
	border: 1px solid #ada
	border-radius: 4px
	margin-bottom: 5px
	&:hover
		background-color: #595
		border-color: #474
		color: #fff

